<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evaluacion_2P_Stefan_Jativa.MainPage"
             Title="Stefan Jativa P2">
   
   
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Ingrese el número de teléfono:" 
               FontSize="Medium"
               x:Name="sjativa_label1"/>

            <Entry x:Name="sjativa_telefonoEntry" 
               Placeholder="Número de teléfono"
               Keyboard="Telephone"
               Margin="0,5"/>

            <Label Text="Ingrese el nombre de quien realiza la recarga:" 
               FontSize="Medium"
               x:Name="sjativa_label2"/>

            <Entry x:Name="sjativa_nombreEntry" 
               Placeholder="Nombre"
               Margin="0,5"/>

            <Button Text="Recargar" 
                BackgroundColor="Purple" 
                TextColor="White" 
                Clicked="Recargar_Clicked"
                x:Name="sjativa_button1"/>

            <Label Text="La última recarga realizada fue:"
               FontSize="Medium"
               Margin="0,20,0,5"/>

            <Label x:Name="sjativa_resultadoLabel"
               FontSize="Small"
               TextColor="Gray"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
