<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Evaluacion_2P_Stefan_Jativa.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Evaluacion_2P_Stefan_Jativa.Views"
    Title="Stefan_Jativa">

    
    <FlyoutItem Icon="icon_main.png" FlyoutDisplayOptions="AsMultipleItems">

        <!-- Página principal -->
        <Tab Title="Inicio" Icon="icon_home.png">
            <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate views:MainPage}"
        Icon="icon_home.png" />
        </Tab>


        <!-- Nueva página: Página 2 -->
        <Tab Title="Página 2" Icon="icon_info.png">
            <ShellContent
        Title="Página 2"
        ContentTemplate="{DataTemplate views:Pagina2}"
        Icon="icon_info.png" />
        </Tab>
        
    </FlyoutItem>
    
</Shell>
